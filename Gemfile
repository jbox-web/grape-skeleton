source 'https://rubygems.org'

# Server
gem 'puma'

# App Framework
gem 'grape'
gem 'grape-swagger'

# Configuration
gem 'dotenv'
gem 'figaro'
gem 'settingslogic'

# Foreman (so we can export systemd config files)
gem 'foreman'

group :development do
  # Deployment
  gem 'capistrano'
  gem 'capistrano-rvm'
  gem 'capistrano-bundler'
  gem 'capistrano-foreman'
  gem 'capistrano-template'
end
